<h1>Posts</h1>

<%= render 'shared/flash' %>
<%= link_to "New Post", new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>URL</th>
      <th>Description</th>
    </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to(body=fix_url(post.url), url=fix_url(post.url)) %></td>
        <td><%= post.description %></td>
        <td><%= link_to "Show", post %></td>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
